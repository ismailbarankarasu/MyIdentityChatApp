<!doctype html>
<html lang="tr">
@await Component.InvokeAsync("_AdminLayoutHeadComponentPartial")
<body>
    <style>
        #main-wrapper {
            display: flex;
            min-height: 100vh;
        }

        #sidebar {
            width: 250px;
            background: #2c3e50; 
            color: white;
            min-height: 100vh;
        }

        #content {
            flex-grow: 1; 
            padding: 20px; 
            background: #f8f9fa;
        }

    </style>
    <div class="page-wrapper d-flex" id="main-wrapper">
        <!-- Sidebar (Sol Menü) -->
        <div class="sidebar" id="sidebar">
            @await Component.InvokeAsync("_AdminLayoutSidebarComponentPartial")
        </div>
        
        <!-- Ana İçerik -->
        <div class="content flex-grow-1" id="content">
            @RenderBody()
        </div>
    </div>

    @await Component.InvokeAsync("_AdminLayoutScriptComponentPartial")
</body>
</html>
