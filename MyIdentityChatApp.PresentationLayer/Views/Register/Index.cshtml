@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background: url('https://img.freepik.com/free-vector/abstract-technological-background_23-2148897676.jpg?t=st=1739274757~exp=1739278357~hmac=b35b939d8e932f8ceec8b0011239352e44b75f4aa69c60aeb79349b9a8c57fc4&w=996') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-in-out;
    }

    .form-container h2 {
        text-align: center;
        margin-bottom: 20px;
        color: #343a40;
    }

    .form-container label {
        font-weight: 600;
        color: #495057;
    }

    .form-container button {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        background-color: #0d6efd;
        border: none;
        border-radius: 5px;
        color: #ffffff;
        transition: background-color 0.3s ease;
    }

    .form-container button:hover {
        background-color: #0056b3;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="form-container">
    <h2>Kayıt Ol</h2>
    <form method="post">
        <div class="mb-3">
            <label for="Name">Adınız</label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Adınızı giriniz" />
        </div>

        <div class="mb-3">
            <label for="Surname">Soyadınız</label>
            <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınızı giriniz" />
        </div>

        <div class="mb-3">
            <label for="Email">Email Adresiniz</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Email adresinizi giriniz" />
        </div>

        <div class="mb-3">
            <label for="UserName">Kullanıcı Adınız</label>
            <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı adınızı giriniz" />
        </div>

        <div class="mb-3">
            <label for="Password">Şifreniz</label>
            <input type="password" class="form-control" asp-for="Password" placeholder="Şifrenizi giriniz" />
        </div>

        <button type="submit">Kullanıcı Kaydet</button>
    </form>
</div>
