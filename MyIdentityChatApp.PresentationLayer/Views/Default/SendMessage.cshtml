@model MyIdentityChatApp.EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-panel">
    <div class="content" style="margin-bottom:310px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mesaj Gönder</div>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <label>Başlık </label>
                                <input type="text" asp-for="Title" class="form-control mb-3" />

                                <label>Mesajınız</label>
                                <input type="text" asp-for="Content" class="form-control mb-3" />

                                <label>Kime </label>
                                <input type="text" asp-for="ReceiverId" class="form-control mb-3" />

                                <label>Category </label>
                                <input type="text" asp-for="CategoryId" class="form-control mb-3" />

                                <button class="btn btn-primary">Gönder</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>