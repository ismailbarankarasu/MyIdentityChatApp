@model MyIdentityChatApp.EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<div class="main-panel">
    <div class="content" style="margin-bottom:310px;">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Mesaj Gönder</div>
                        </div>
                        <div class="card-body">
                            <form method="post">
                                <label>Başlık </label>
                                <input type="text" asp-for="Title" class="form-control mb-3" />

                                <label>Mesajınız</label>
                                <input type="text" asp-for="Content" class="form-control mb-3" />

                                <label>Kime </label>
                                <select asp-for="ReceiverId" asp-items="ViewBag.Receivers" class="form-control mb-3">
                                    <option value="">Seçiniz...</option>
                                </select>

                                <label>Kategory</label>
                                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control mb-3">
                                    <option value="">Seçiniz...</option>
                                </select>

                                <button class="btn btn-primary">Gönder</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (TempData["MessageSent"] != null && (bool)TempData["MessageSent"] == true)
{
    <script>
        Swal.fire({
            title: "Başarılı!",
            text: "Mailiniz Başarılı Bir Şekilde Gönderildi.",
            icon: "success",
            confirmButtonText: "Tamam"
        });
    </script>
}