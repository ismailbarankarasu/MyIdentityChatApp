@model List<MyIdentityChatApp.EntityLayer.Concrete.Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <table class="table table-bordred">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Gönderildiği Tarih</th>
            <th>Gönderen ID</th>
            <th>Alıcı Id</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageId</td>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td>@item.SentAt</td>
                <td>@item.SenderId</td>
                <td>@item.ReceiverId</td>
                <td><a class="btn btn-danger">Sil</a></td>
                <td><a class="btn btn-success">Güncelle</a></td>
            </tr>
        }
        <button class="btn btn-info">Yeni Mesaj</button>
    </table>
</section>